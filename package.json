{
  "name": "mifrej-portfolio",
  "private": true,
  "scripts": {
    "clear-cache": "rm -rf ./node_modules/.cache .next coverage",
    "compile": "tsc -p . --noEmit",
    "dev": "next",
    "build": "rm -rf .next && NODE_ENV=production yarn next build",
    "lint": "eslint -c ./.eslintrc.js './**/*.{json,js,ts,tsx}'",
    "lint:styles": "stylelint {src,pages}/**/*.{css,tsx}",
    "start": "NODE_ENV=production next start",
    "export": "yarn build && NODE_ENV=production yarn next export",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "next": "^9.2.1",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-vertical-timeline-component": "^2.3.1"
  },
  "devDependencies": {
    "@types/react-vertical-timeline-component": "^2.3.0",
    "@next/bundle-analyzer": "^9.2.1",
    "@testing-library/jest-dom": "^5.1.0",
    "@testing-library/react": "^9.4.0",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@zeit/next-css": "^1.0.1",
    "clsx": "^1.0.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-transform-css": "^2.0.0",
    "next-compose-plugins": "^2.2.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-normalize": "^8.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^6.0.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^19.0.0",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "browserslist": [
    "last 1 version",
    "> 0.5%",
    "not dead",
    "IE 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --verbose"
    }
  }
}
